import sys

def main():
    data = sys.stdin.read().strip()

    if not data:
        print("Error: no input", file=sys.stderr)
        sys.exit(1)

    tokens = data.replace("\n", " ").split()
    numbers = []

    for token in tokens:
        try:
            value = float(token)
            numbers.append(value)
        except ValueError:
            print(f"Error: invalid token '{token}' detected", file=sys.stderr)
            sys.exit(1)

    count = len(numbers)
    sum_value = sum(numbers)
    avg = sum_value / count
    max_value = max(numbers)
    min_value = min(numbers)

    print(
        f"count: {count} "
        f"sum: {sum_value:.1f} "
        f"avg: {avg:.2f} "
        f"max: {max_value:.1f} "
        f"min: {min_value:.1f}"
    )

if __name__ == "__main__":
    main()

