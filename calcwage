import sys

def get_income_tax_rate(yearly_income):
    """年収に応じた所得税率を返す (123万以下は非課税)"""
    if yearly_income <= 1230000:
        return 0.0
    elif yearly_income <= 1950000:
        return 0.05
    elif yearly_income <= 3300000:
        return 0.10
    elif yearly_income <= 6950000:
        return 0.20
    elif yearly_income <= 9000000:
        return 0.23
    elif yearly_income <= 18000000:
        return 0.33
    elif yearly_income <= 40000000:
        return 0.40
    else:
        return 0.45

def main():
    has_input = False
    for line in sys.stdin:
        line = line.strip()
        if not line: continue
        tokens = line.split()
        if len(tokens) != 3:
            print(f"Error: Invalid input. Expected: [Wage] [Hours] [Days]", file=sys.stderr)
            sys.exit(1)

        try:
            hourly = float(tokens[0])
            hours = float(tokens[1])
            days = float(tokens[2])
            has_input = True

            daily = hourly * hours
            monthly = daily * days
            yearly = monthly * 12

            income_tax_rate = get_income_tax_rate(yearly)
            
            if yearly <= 1350000:
                resident_tax_rate = 0.0
            else:
                resident_tax_rate = 0.10

            total_tax_rate = income_tax_rate + resident_tax_rate
        
            net_yearly = yearly * (1 - total_tax_rate)

            print(f"額面給与: 日給 {daily:,.0f}円 / 月給 {monthly:,.0f}円 / 年収 {yearly:,.0f}円")
            print(f"適用税率: 所得税 {income_tax_rate*100:.0f}% + 住民税 {resident_tax_rate*100:.0f}% (計 {total_tax_rate*100:.0f}%)")
            print(f"推定手取り年収: {net_yearly:,.0f}円")

        except ValueError:
            print(f"Error: Non-numeric value found", file=sys.stderr)
            sys.exit(1)

    if not has_input:
        print("Error: no input", file=sys.stderr)
        sys.exit(1)

if __name__ == "__main__":
    main()
