import sys

def main():
    has_input = False
    for line in sys.stdin:
        line = line.strip()
        if not line:
            continue
            
        tokens = line.split()
        if len(tokens) != 3:
            print(f"Error: Invalid input '{line}'. Expected: [Wage] [Hours] [Days]", file=sys.stderr)
            sys.exit(1)

        try:
            hourly = float(tokens[0])
            hours_per_day = float(tokens[1])
            days_per_month = float(tokens[2])
            has_input = True

            daily = hourly * hours_per_day
            monthly = daily * days_per_month
            yearly = monthly * 12

            print(f"Input: {hourly:.0f}円/h, {hours_per_day}h/日, {days_per_month}日/月 -> "
                  f"日給: {daily:.0f}円, 月給: {monthly:,.0f}円, 年収: {yearly:,.0f}円")

        except ValueError:
            print(f"Error: Non-numeric value in '{line}'", file=sys.stderr)
            sys.exit(1)

    if not has_input:
        print("Error: no input", file=sys.stderr)
        sys.exit(1)

if __name__ == "__main__":
    main()
